<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom TextInputLayout Style -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="android:strokeColor">@color/black</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- Custom TextInputEditText Style -->
    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">20dp</item>

    </style>

    <!-- Custom Button Style -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
       <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>
    <style name="CustomTextViewHeader" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">20dp</item>

    </style>
    <style name="CustomTextView" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">5dp</item>

    </style>
    <style name="CustomLogo" >
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:elevation">8dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/app_logo</item>
    </style>
    <style name="HintTextAppearanceWithAsterisk">
        <item name="android:background">@drawable/required_hint_background</item>
        <item name="android:textColorHint">@color/red_500</item>
    </style>



</resources>
